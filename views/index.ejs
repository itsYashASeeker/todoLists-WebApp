<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>todo-list</title>
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="fullbg" id="idfullbg">
        <div class="childbg" id="idchildbg"></div>
        <form method="post">
            <div class="listcard">
                <div class="editLists">
                    <button type="button" id="ideditLists" class="editListsbutton"><i class="fa-sharp fa-solid fa-pen"></i></button>
                    <div id="ideditContainer" class="editContainer">
                        <ul>
                            <li id="idEditOption">Edit</li>
                            <li id="idDelOption">Delete</li>
                        </ul>
                    </div>
                </div>
                <div class="cancelLists">
                    <button type="button" id="idcancelLists"><i class="fa-solid fa-xmark"></i></button>
                </div>
                <div class="uheaderdiv">
                    <p name="header" class="uheader" id="idheader"><%= header %></p>
                    <input type="text" id="ideInH" class="eInH dall" name="updHeader">
                    <button type="submit" id="iddelHeader" class="delitem delHeader dall" formaction="/<%=header%>/del"><i class="fa-solid fa-trash"></i></button>
                    <button type="submit" id="ideditHeader" class="delitem delHeader editHeader dall" formaction="/<%=header%>/upd"><i class="fa-solid fa-pen-to-square"></i></button>
                </div>
                <ul class="ullists">
                    <% for(var i=0; i<listIte.length; i++){ %>
                        <div id="idIndividitem" class="Individitem">
                            <li id="idlItem"><%= listIte[i] %></li>
                            <input type="text" id="idEInL" class="eInH dall" name="<%=listIte[i]%>">
                            <button type="submit" id="iddelitem" class="delitem dall" formaction="/<%=header%>/<%=listIte[i]%>/del"><i class="fa-solid fa-trash"></i></button>
                            <button type="submit" id="idedititem" class="delitem delHeader editHeader dall" formaction="/<%=header%>/<%=listIte[i]%>/upd"><i class="fa-solid fa-pen-to-square"></i></button>
                        </div>
                    <% } %>
                </ul>
                <div class="addnew">
                    <input type="text" placeholder="todo item" name="list_item" class="yinput">
                    <button name="uhead" type="menu" value="<%= header %>" class="ybutton" formaction="<%=header%>/addList">Submit</button>
                </div>
            </div>
           
            <div id="idsidemenu" class="sidemenu">
                <div class="upperside">
                    <p class="sideGreet">Hello <%=userFName%></p>
                </div> 
                <div class="mainLowerside">
                    <div class="lowerside">  
                        <ul id="headerLists">
                            <% for(var i=0; i<hLists.length; i++){ %>
                                <a href="/<%=hLists[i]%>"><li><%= hLists[i] %></li></a>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <div class="mainLower2">
                    <div class="lastLower">
                        <input type="text" placeholder="New Header" name="inHeader" class="binput" id="ibinput">
                        <button type="submit" name="createHead" class="bbutton" id="createBut" formaction="<%=header%>/addHeader">Create</button>
                    </div>  
                    <button type="submit" formaction="/logout" class="ylogout">Logout</button>
                </div>
            </div>
            <button type="button" id="explore"><i class="fa-solid fa-compass" id="iexplore"></i></button>
        </form> 
    </div>
    <script src="https://kit.fontawesome.com/e499e1a3c2.js" crossorigin="anonymous"></script>
    <script src="js/index.js"></script>
</body>
</html>